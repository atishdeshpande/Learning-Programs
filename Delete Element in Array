#include<iostream>
using namespace std;
int main(){
int a[100], i, n, pos;
cout<<"enter the number of elements"<<endl;
cin>>n;

cout<<"enter the elements in array"<<endl;
for(i=0;i<n;i++){
    cin>>a[i];
}
cout<<"enter the position of element to be deleted"<<endl;
cin>>pos;
for(i=pos-1;i<n;i++){
    a[i]=a[i+1];
}
  n=n-1;
cout<<"array after deletion"<< endl;
for(i=0;i<n;i++)
{
cout<<"\t"<<a[i];
}

   
return 0;
}
