#include<iostream>
using namespace std;
int main(){
int i, n, sum;
cout<<"enter the number ";
cin>>n;
sum=0;
for(i=1;i<=n/2;i++) //(n/2) because the divisors will be less than n/2 of any given number & for loop to repeat the process till n/2 times                  
{
    if(n%i==0)
    {
    sum=sum+i;
    }
}

if(sum==n){
    cout<<"the given number is perfect";

}
else{
    cout<<"the number is not perfect";
}
return 0;
}
